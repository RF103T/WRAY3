        android:shortcutLongLabel="@string/shortcuts_camera_long"
        android:shortcutDisabledMessage="@string/shortcuts_camera_disable">
        <intent
            android:action="intent.action.shortcuts.camera"
            android:targetPackage="com.wray2"
            android:targetClass="com.wray2.FragmentsActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <shortcut
        android:shortcutId="search"
        android:enabled="true"
        android:icon="@mipmap/ic_search_shortcut"
        android:shortcutShortLabel="@string/shortcuts_search_short"
        android:shortcutLongLabel="@string/shortcuts_search_long"
        android:shortcutDisabledMessage="@string/shortcuts_search_disable">
        <intent
            android:action="intent.action.shortcuts.search"
            android:targetPackage="com.wray2"
            android:targetClass="com.wray2.FragmentsActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

</shortcuts>