<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">

    <shortcut
        android:shortcutId="addCalendar"
        android:enabled="true"
        android:icon="@mipmap/ic_calendar_shortcut"
        android:shortcutShortLabel="@string/shortcuts_manager_calendar_short"
        android:shortcutLongLabel="@string/shortcuts_manager_calendar_long"
        android:shortcutDisabledMessage="@string/shortcuts_manager_calendar_disable">
        <intent
            android:action="intent.action.shortcuts.calendar"
            android:targetPackage="com.wray2"
            android:targetClass="com.wray2.FragmentsActivity"  />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <shortcut
        android:shortcutId="camera"
        android:enabled="true"
        android:icon="@mipmap/ic_camera_shortcut"
