<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorSecondary">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@color/black</item>

        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#00000000</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
        <item name="cards_background">@color/white</item>
        <!--主页部分 -->
        <item name="homepage_light_textcolor">@color/homepage_lightgreen</item>
        <item name="homepage_pic_background">@drawable/pic_card_background</item>
        <item name="homepage_title">@color/colorAccent</item>
        <item name="homepage_title_background_color">@color/white</item>
        <item name="homepage_line">@drawable/ic_homepage_light_line</item>
        <item name="homepage_title_item_background_color">@color/homepage_background_transfromgreen</item>
        <!--搜索部分 -->
        <item name="search_edittxt_color">@color/backgroundgreen</item>
        <item name="search_edittxt_hint_color">@color/hintcolortxtgreen</item>
        <item name="search_pic_color">#00675B</item>
        <item name="search_item_txt_color">@color/homepage_deepgreen</item>
        <item name="search_item_background_color">@color/cardView_background_green</item>
        <item name="searchresult_cardview_background_color">@color/white</item>
        <!--日程表部分 -->
        <item name="calandarsetting_txt_color">@color/colorsettxtgreen</item>
        <!--相机部分 -->
        <item name="cameraresult_txt_color">@color/black</item>
        <item name="cameraresult_card_background_color">@drawable/shape_corner_up</item>
    </style>

    <style name="darkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorSecondary">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
        <item name="cards_background">@color/dark_Theme_Fragment_Background</item>
        <!--主页部分 -->
        <item name="homepage_light_textcolor">@color/white</item>
        <item name="homepage_pic_background">@drawable/ic_homepage_dark_picture</item>
        <item name="homepage_title">@color/white</item>
        <item name="homepage_title_background_color">@color/dark_homepage_title_background_color</item>
        <item name="homepage_line">@drawable/ic_homepage_dark_line</item>
        <item name="homepage_title_item_background_color">@color/dark_homepage_title_item_background_color</item>
        <!--搜索部分 -->
        <item name="search_edittxt_color">@color/search_edittxt_background_color</item>
        <item name="search_edittxt_hint_color">@color/dark_colorAccent</item>
        <item name="search_pic_color">@color/dark_colorAccent</item>
        <item name="search_item_txt_color">@color/dark_colorAccent</item>
        <item name="search_item_background_color">@color/dark_homepage_title_item_background_color</item>
        <item name="searchresult_cardview_background_color">@color/dark_homepage_title_item_background_color</item>
        <!--日程表部分 -->
        <item name="calandarsetting_txt_color">@color/white</item>
        <!--相机部分 -->
        <item name="cameraresult_txt_color">@color/white</item>
        <item name="cameraresult_card_background_color">@drawable/dark_camerresult_card_background</item>

    </style>

    <style name="WindowAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit_anim</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决Toolbar空白部分-->
    </style>

    <style name="dialog_date">
        <!--设置header部分显示的颜色-->
        <item name="colorPrimary">@color/homepage_background_green</item>
        <item name="colorPrimaryDark">@color/homepage_deepgreen</item>
        <item name="colorAccent">@color/homepage_background_green</item>
        <!--这个说明提示框是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--这个说明提示框是否是浮动的 这个很重要-->
        <item name="android:windowIsFloating">true</item>
        <!--设置dialog不全屏 貌似没有效果-->
        <item name="android:windowFullscreen">false</item>
        <!--这个说明提示框是滞是透明的-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--除去title，如果在代码里面有其他设置会没效果的不过完全没效果-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--<!–背景色  如果除去背景色 @null –>-->
        <!--<item name="android:windowBackground">@color/red_F1</item>-->
        <!--按钮字体的颜色-->
        <!--<item name="android:textColor">@color/dark_2B</item>-->
    </style>

</resources>
